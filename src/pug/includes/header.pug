            svg
              use(xlink:href="#instagram")
      .header__menu--wrap
        button.btn.secondary-btn.header__menu(data-fancybox data-src="#menu-popup")
          svg
            use(xlink:href="#menu")
        button.btn.secondary-btn.header__menu.header__menu--hide(data-fancybox-close)
          svg
            use(xlink:href="#search-close")

